@model IEnumerable<WardrobeMVC2.Models.Top>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div>
    <h4>My Tops</h4>
    <hr />
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <div class="thumbnail">

                    <div class="caption">
                        <img class="topsPhoto" style="width: 200px"  src="@Html.DisplayFor(modelItem => item.Photo)" />
                        <h3>@Html.DisplayFor(modelItem => item.Name)</h3>
                        <p>@Html.DisplayFor(modelItem => item.Type)</p>
                        <p>@Html.DisplayFor(modelItem => item.Color) </p>
                        <p>@Html.DisplayFor(modelItem => item.Occasion) </p>
                        <p> @Html.DisplayFor(modelItem => item.Season)</p>
                        <p>
                            @Html.ActionLink("Edit", "Edit", new { id = item.TopsID }) |
                            @Html.ActionLink("Details", "Details", new { id = item.TopsID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.TopsID })
                        </p>
                    </div>
                </div>
            </div>
            }
        </div>

    </div>
