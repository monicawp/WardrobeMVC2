@model WardrobeMVC2.Models.Accessory

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>
<div>
    <h4>My Accessories</h4>
    <hr />
    <div class="row">

        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img src="@Html.DisplayFor(modelItem => modelItem.Photo)" />
                <div class="caption">
                    <h3>@Html.DisplayFor(model => model.Name)</h3>
                    <p>@Html.DisplayFor(model => model.Type)</p>
                    <p>@Html.DisplayFor(model => model.Color) </p>
                    <p>@Html.DisplayFor(model => model.Occasion) </p>
                    <p> @Html.DisplayFor(model => model.Season)</p>
                    <p>
                        @Html.ActionLink("Edit", "Edit", new { id = Model.AccessoriesID }) |
                        @Html.ActionLink("Back to List", "Index")
                    </p>
                </div>
            </div>
        </div>
    </div>

</div>


